@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<List<AnthillaCore.Models.Anth_Dump>>
@using System.Collections.Generic
@{Layout = "_layout-fw.cshtml";}

@section PageBar
{
    <nav class="navigation-bar page bg-white fg-anthilla-blue" style="padding-top: 10px; border-bottom: 4px solid #548ED4;">
        <nav class="navigation-bar-content">
            <div class="element upcase bold no-overlay fg-black upcase" style="line-height: 0px; margin-left: 20px !important;">Utility </div>
\
           <a href="#anchorWhis" class="element upcase no-overlay anchor" style="line-height: 0px;">
                <i class="icon-help-2 on-left" style="line-height: 0px;"></i>Whois
            </a>
            <a href="#anchorPpi" class="element upcase no-overlay anchor" style="line-height: 0px;">
                <i class="icon-pop-out on-left" style="line-height: 0px;"></i>Public IP
            </a>
            <a href="#anchorIpuse" class="element upcase no-overlay anchor" style="line-height: 0px;">
                <i class="icon-pop-in on-left" style="line-height: 0px;"></i>IP in use
            </a>
        </nav>
    </nav>
}

@section MainContent
{
    <legend id="anchorWhis">Whois</legend>
    <input type="text" />
    <input class="bg-anthilla-green fg-anthilla-gray upcase" type="button" value="Search" />
    <br />
    <legend id="anchorPpi">Public IP</legend>
    <br />
    <legend id="anchorIpuse">IP in use</legend>
    <br />
}

@section Scripts
{
    <script type="text/javascript">
        $('a.anchor').click(function () {
            $('html, body').animate({
                scrollTop: $($(this).attr('href')).offset().top
            }, 500);
            return false;
        });

        $(window).scroll(function () {
            if ($(window).scrollTop() > 150) {
                var i = $(window).scrollTop() - 145;
                $('.navigation-bar.page').css('top', i);
            }
            if ($(window).scrollTop() < 150) {
                $('.navigation-bar.page').css('top', 0);
            }
        });
    </script>
}