@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>
@using System.Collections.Generic
@{Layout = "_layout-st.cshtml";}

@section PageBar
{
    <nav class="navigation-bar page bg-white fg-anthilla-blue" style="padding-top: 10px; border-bottom: 4px solid #548ED4;">
        <nav class="navigation-bar-content">
            <div class="element upcase bold no-overlay fg-black upcase" style="line-height: 0px; margin-left: 20px !important;">Sharing </div>

            <a href="#anchorWin" class="element upcase no-overlay anchor" style="line-height: 0px;">
                <i class="icon-windows on-left" style="line-height: 0px;"></i>Windows
            </a>
            <a href="#anchorApp" class="element upcase no-overlay anchor" style="line-height: 0px;">
                <i class="icon-apple on-left" style="line-height: 0px;"></i>Apple
            </a>
            <a href="#anchorUnix" class="element upcase no-overlay anchor" style="line-height: 0px;">
                <i class="icon-tux on-left" style="line-height: 0px;"></i>Unix
            </a>
            <a href="#anchorRsync" class="element upcase no-overlay anchor" style="line-height: 0px;">
                <i class="icon-loading on-left" style="line-height: 0px;"></i>RSYNC
            </a>
            <a href="#anchorCld" class="element upcase no-overlay anchor" style="line-height: 0px;">
                <i class="icon-cloud on-left" style="line-height: 0px;"></i>Cloud
            </a>
            <a href="#anchorFtp" class="element upcase no-overlay anchor" style="line-height: 0px;">
                <i class="icon-upload-2 on-left" style="line-height: 0px;"></i>FTP
            </a>
            <a href="#anchorFs" class="element upcase no-overlay anchor" style="line-height: 0px;">
                <i class="icon-zip on-left" style="line-height: 0px;"></i>FileShare
            </a>
            <a href="#anchorIfa" class="element upcase no-overlay anchor" style="line-height: 0px;">
                <i class="icon-eye on-left" style="line-height: 0px;"></i>Inspect File Access
            </a>
        </nav>
    </nav>
}

@section Dashboard
{

}

@section MainContent
{

}

@section Scripts
{
    <script type="text/javascript">
        $('a.anchor').click(function () {
            $('html, body').animate({
                scrollTop: $($(this).attr('href')).offset().top
            }, 500);
            return false;
        });

        $(window).scroll(function () {
            if ($(window).scrollTop() > 150) {
                var i = $(window).scrollTop() - 145;
                $('.navigation-bar.page').css('top', i);
            }
            if ($(window).scrollTop() < 150) {
                $('.navigation-bar.page').css('top', 0);
            }
        });
    </script>
}