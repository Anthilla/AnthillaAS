@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<List<AnthillaASCore.Models.Anth_Dump>>
@using System.Collections.Generic
@{Layout = "_layout-st.cshtml";}

@section PageBar
{
    <nav class="navigation-bar bg-transparent page-bar">
        <nav class="navigation-bar-content">
            <div class="element upcase fg-anthilla-blu border-2-anthilla-blu no-overlay" style="line-height: 0px;">Mail </div>
            <div class="element-divider"></div>
            <div class="element upcase fg-anthilla-green border-2-anthilla-green no-overlay" style="line-height: 0px;">
                <i class="icon-mail on-left" style="line-height: 0px;"></i>IMAP
            </div>
            <div class="element-divider"></div>
            <div class="element upcase fg-anthilla-green border-2-anthilla-green no-overlay" style="line-height: 0px;">
                <i class="icon-mail on-left" style="line-height: 0px;"></i>POP3/IMAP
            </div>
            <div class="element-divider"></div>
            <div class="element upcase fg-anthilla-green border-2-anthilla-green no-overlay" style="line-height: 0px;">
                <i class="icon-mail-2 on-left" style="line-height: 0px;"></i>Web Mail
            </div>
            <div class="element-divider"></div>
            <div class="element-divider"></div>
            <div class="element upcase fg-anthilla-green border-2-anthilla-green no-overlay" style="line-height: 0px;">
                <i class="icon-stats-2 on-left" style="line-height: 0px;"></i>Mail Server Stats
            </div>
            <div class="element-divider"></div>
        </nav>
    </nav>
}

@section Dashboard
{

}

@section MainContent
{
    <legend>IMAP Server</legend>
    <table class="table hovered">
        <thead>
            <tr>
                <th>Manage Mail Folders & Directories</th>
                <th>&nbsp</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>New Directory </td>
                <td>
                    <input type="text" /></td>
            </tr>
            <tr>
                <td>Percentage </td>
                <td>
                    <input type="checkbox" />Nobody</td>
            </tr>
            <tr>
                <td>&nbsp</td>
                <td>
                    <input class="bg-anthilla-green fg-anthilla-gray upcase" type="button" value="Create" /></td>
            </tr>
        </tbody>
    </table>
    <table class="table hovered">
        <thead>
            <tr>
                <th>Directories</th>
                <th>&nbsp</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
    <br />
    <legend>POP3/IMAP Server</legend>
    <form id="" action="~/" method="POST" enctype="multipart/form-data">
        <table class="table hovered">
            <thead>
                <tr>
                    <th>"Abilitato"</th>
                    <th>Name</th>
                    <th>Protocol</th>
                    <th>Local & Remote Users </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>No connector yet</td>
                    <td>&nbsp</td>
                    <td>&nbsp</td>
                    <td>&nbsp</td>
                </tr>
            </tbody>
        </table>
        <input class="bg-anthilla-green fg-anthilla-gray upcase" type="submit" value="Add Connector" />
    </form>
    <br />
    <legend>Web Mail</legend>
    <br />
    <legend>Mail Server Stats</legend>
    <div class="tab-control" data-role="tab-control">
        <ul class="tabs">
            <li class="active"><a href="#_day_">Daily</a></li>
            <li><a href="#_week_">Weekly</a></li>
            <li><a href="#_month_">Monthly</a></li>
            <li><a href="#_year_">Yearly</a></li>
        </ul>

        <div class="frames">
            <div class="frame" id="_day_"></div>
            <div class="frame" id="_week_"></div>
            <div class="frame" id="_month_"></div>
            <div class="frame" id="_year_"></div>
        </div>
    </div>
}

