@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<List<AnthillaASCore.Models.Anth_Dump>>
@using System.Collections.Generic
@{Layout = "_layout-st.cshtml";}

@section PageBar
{
    <nav class="navigation-bar bg-transparent page-bar">
        <nav class="navigation-bar-content">
            <div class="element upcase fg-anthilla-blu border-2-anthilla-blu no-overlay" style="line-height: 0px;">User & ACL </div>
            <div class="element-divider"></div>
            <div class="element upcase fg-anthilla-green border-2-anthilla-green no-overlay" style="line-height: 0px;">
                <i class="icon-user-3 on-left" style="line-height: 0px;"></i>Manage
            </div>
            <div class="element-divider"></div>
            <div class="element upcase fg-anthilla-green border-2-anthilla-green no-overlay" style="line-height: 0px;">
                <i class="icon-comments-2 on-left" style="line-height: 0px;"></i>Mail Alias
            </div>
            <div class="element-divider"></div>
            <div class="element upcase fg-anthilla-green border-2-anthilla-green no-overlay" style="line-height: 0px;">
                <i class="icon-screen on-left" style="line-height: 0px;"></i>Virtual User
            </div>
            <div class="element-divider"></div>
            <div class="element upcase fg-anthilla-green border-2-anthilla-green no-overlay" style="line-height: 0px;">
                <i class="icon-loop on-left" style="line-height: 0px;"></i>Map Addresses
            </div>
            <div class="element-divider"></div>
        </nav>
    </nav>
}

@section Dashboard
{

}

@section MainContent
{
    <legend>User Management</legend>
    <div class="tab-control" data-role="tab-control">
        <ul class="tabs">
            <li class="active"><a href="#_users_">Users</a></li>
            <li><a href="#_acdir_">Active Directory</a></li>
            <li><a href="#_wbauth_">Webmail Authentication</a></li>
        </ul>

        <div class="frames">
            <div class="frame" id="_users_">
                <form id="Users" action="~/" method="POST" enctype="multipart/form-data">
                    <table class="table hovered">
                        <thead>
                            <tr>
                                <th>User</th>
                                <th>Home Directory</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>No user yet</td>
                                <td>&nbsp</td>
                            </tr>
                        </tbody>
                    </table>
                    <input class="bg-anthilla-green fg-anthilla-gray upcase" type="submit" value="New User" />
                </form>
            </div>

            <div class="frame" id="_acdir_">
                <form id="AcDir" action="~/" method="POST" enctype="multipart/form-data">
                    <div class="tile double">information ()</div>
                    <div class="tile double">success ()</div>
                    <br />
                    <table class="table hovered">
                        <thead>
                            <tr>
                                <th>Active Directory</th>
                                <th>&nbsp</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Indirizzo IP PDC</td>
                                <td>
                                    <input type="text" /></td>
                            </tr>
                            <tr>
                                <td>Nome Utente ADS</td>
                                <td>
                                    <input type="text" /></td>
                            </tr>
                            <tr>
                                <td>Password ADS</td>
                                <td>
                                    <input type="text" /><a href="#" class="button fg-black">Disable</a></td>
                            </tr>
                        </tbody>
                    </table>
                    <input class="bg-anthilla-green fg-anthilla-gray upcase" type="submit" value="Save" />
                </form>
            </div>

            <div class="frame" id="_wbauth_">
                <form id="WbDir" action="~/" method="POST" enctype="multipart/form-data">
                    <table class="table hovered">
                        <thead>
                            <tr>
                                <th>Webmail Authentication</th>
                                <th>&nbsp</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Default email domain</td>
                                <td>
                                    <input type="text" /></td>
                            </tr>
                            <tr>
                                <td>Authentication Type</td>
                                <td>
                                    <input type="text" /></td>
                            </tr>
                            <tr>
                                <td>Webmail Admin</td>
                                <td>
                                    <input type="text" /><a href="#" class="button fg-black">Disable</a></td>
                            </tr>
                        </tbody>
                    </table>
                    <input class="bg-anthilla-green fg-anthilla-gray upcase" type="submit" value="Save" />
                </form>
            </div>
        </div>
    </div>
    <br />
    <legend>Mail Alias</legend>
    <table class="table hovered">
        <thead>
            <tr>
                <th>Settings</th>
                <th>&nbsp</th>
                <th>&nbsp</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>If I write to </td>
                <td>
                    <input type="text" /></td>
                <td>&nbsp</td>
            </tr>
            <tr>
                <td>Send to </td>
                <td>
                    <input type="checkbox" />Nobody</td>
                <td>&nbsp</td>
            </tr>
            <tr>
                <td>&nbsp</td>
                <td>
                    <input type="checkbox" />Add email address</td>
                <td>
                    <input type="text" /></td>
            </tr>
            <tr>
                <td>&nbsp</td>
                <td>
                    <input class="bg-anthilla-green fg-anthilla-gray upcase" type="button" value="Save" /></td>
                <td>&nbsp</td>
            </tr>
        </tbody>
    </table>
    <table class="table hovered">
        <thead>
            <tr>
                <th>Mail for</th>
                <th>Send to</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
    <br />
    <legend>Virtual Users</legend>
    <table class="table hovered">
        <thead>
            <tr>
                <th>Settings</th>
                <th>&nbsp</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Mail for </td>
                <td>
                    <input type="text" /></td>
            </tr>
            <tr>
                <td>Select alias </td>
                <td>
                    <input type="checkbox" />Nobody</td>
            </tr>
            <tr>
                <td>&nbsp</td>
                <td>
                    <input class="bg-anthilla-green fg-anthilla-gray upcase" type="button" value="Save" /></td>
            </tr>
        </tbody>
    </table>
    <table class="table hovered">
        <thead>
            <tr>
                <th>Mail for</th>
                <th>Virtual User</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
    <br />
    <legend>Map Addresses</legend>
    <table class="table hovered">
        <thead>
            <tr>
                <th>Add / Edit</th>
                <th>&nbsp</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>FROM or TO </td>
                <td>
                    <input type="text" /></td>
            </tr>
            <tr>
                <td>Set Sender or Receiver </td>
                <td>
                    <input type="checkbox" />Nobody</td>
            </tr>
            <tr>
                <td>&nbsp</td>
                <td>
                    <input class="bg-anthilla-green fg-anthilla-gray upcase" type="button" value="Save" /></td>
            </tr>
        </tbody>
    </table>
    <table class="table hovered">
        <thead>
            <tr>
                <th>FROM or TO</th>
                <th>Set Sender or Receiver</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
    <br />
}

