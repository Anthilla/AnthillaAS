@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<List<AnthillaASCore.Models.Anth_Dump>>
@using System.Collections.Generic
@{Layout = "_layout-fw.cshtml";}

@section PageBar
{
    <nav class="navigation-bar bg-transparent page-bar">
        <nav class="navigation-bar-content">
            <div class="element upcase fg-anthilla-blu border-2-anthilla-blu no-overlay" style="line-height: 0px;">VPN </div>
            <div class="element-divider"></div>
            <div class="element upcase fg-anthilla-green border-2-anthilla-green no-overlay" style="line-height: 0px;">
                <i class="icon-satellite on-left" style="line-height: 0px;"></i>VPN GRE/L2TP
            </div>
            <div class="element-divider"></div>
            <div class="element upcase fg-anthilla-green border-2-anthilla-green no-overlay" style="line-height: 0px;">
                <i class="icon-satellite on-left" style="line-height: 0px;"></i>VPN Openvpn
            </div>
            <div class="element-divider"></div>
            <div class="element upcase fg-anthilla-green border-2-anthilla-green no-overlay" style="line-height: 0px;">
                <i class="icon-satellite on-left" style="line-height: 0px;"></i>VPN ipsec
            </div>
            <div class="element-divider"></div>
        </nav>
    </nav>
}

@section Dashboard
{

}

@section MainContent
{
    <legend>VPN GRE/L2TP</legend>
    <div class="tab-control" data-role="tab-control">
        <ul class="tabs">
            <li class="active"><a href="#_users_">Manage Users</a></li>
            <li><a href="#_vpn_">VPN Options</a></li>
        </ul>

        <div class="frames">
            <div class="frame" id="_users_">
                <table class="table hovered">
                    <thead>
                        <tr>
                            <th>VNP Users List</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>No user yet</td>
                        </tr>
                    </tbody>
                </table>
                <input class="bg-anthilla-green fg-anthilla-gray upcase" type="submit" value="Add User" />
            </div>
            <div class="frame" id="_vpn_">
                <table class="table hovered">
                    <thead>
                        <tr>
                            <th>Set VPN Options</th>
                            <th>&nbsp</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Default Route</td>
                            <td>
                                <input type="text" placeholder="Remote Gateway" /></td>
                        </tr>
                        <tr>
                            <td>Server-side IP Range</td>
                            <td>
                                <input type="text" /></td>
                        </tr>
                        <tr>
                            <td>Client-side IP Range</td>
                            <td>
                                <input type="text" /></td>
                        </tr>
                        <tr>
                            <td>Server DNS</td>
                            <td>
                                <input type="text" /></td>
                        </tr>
                        <tr>
                            <td>Server WINS</td>
                            <td>
                                <input type="text" /></td>
                        </tr>
                    </tbody>
                </table>
                <input class="bg-anthilla-green fg-anthilla-gray upcase" type="submit" value="Save" />
            </div>
        </div>
    </div>
    <input class="bg-anthilla-green fg-anthilla-gray upcase" type="button" value="Save Options" />
    <br />
    <legend>VPN OpenVPN</legend>
    <div class="tab-control" data-role="tab-control">
        <ul class="tabs">
            <li class="active"><a href="#_vpns_">Configured VPNs</a></li>
            <li><a href="#_newvpn_">New VPN</a></li>
            <li><a href="#_crtf_">Manage Certificate</a></li>
        </ul>

        <div class="frames">
            <div class="frame" id="_vpns_">
                <table class="table hovered">
                    <thead>
                        <tr>
                            <th>Status</th>
                            <th>Name</th>
                            <th>Purpose</th>
                            <th>&nbsp</th>
                            <th>Protocol</th>
                            <th>Compression</th>
                            <th>Users</th>
                            <th>&nbsp</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
            <div class="frame" id="_newvpn_">
                <table class="table hovered">
                    <thead>
                        <tr>
                            <th>Configure New VPN</th>
                            <th>&nbsp</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <input class="bg-anthilla-green fg-anthilla-gray upcase" type="submit" value="New VPN" /></td>
                            <td>Create a New Server-Server Configuration</td>
                        </tr>
                        <tr>
                            <td>
                                <input class="bg-anthilla-green fg-anthilla-gray upcase" type="submit" value="Import VPN" /></td>
                            <td>
                                <input type="file" /></td>
                        </tr>
                    </tbody>
                </table>
                <input class="bg-anthilla-green fg-anthilla-gray upcase" type="submit" value="Save" />
            </div>
            <div class="frame" id="_crtf_">
                <table class="table hovered">
                    <thead>
                        <tr>
                            <th>Generate Certificate</th>
                            <th>&nbsp</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Key Size</td>
                            <td>
                                <input type="text" /></td>
                        </tr>
                        <tr>
                            <td>Valid for</td>
                            <td>
                                <input type="text" /></td>
                        </tr>
                        <tr>
                            <td>Common Name</td>
                            <td>
                                <input type="text" /></td>
                        </tr>
                        <tr>
                            <td>Company Name</td>
                            <td>
                                <input type="text" /></td>
                        </tr>
                        <tr>
                            <td>Organizational Unit</td>
                            <td>
                                <input type="text" /></td>
                        </tr>
                        <tr>
                            <td>City</td>
                            <td>
                                <input type="text" /></td>
                        </tr>
                        <tr>
                            <td>State</td>
                            <td>
                                <input type="text" /></td>
                        </tr>
                        <tr>
                            <td>"Provincia"</td>
                            <td>
                                <input type="text" /></td>
                        </tr>
                        <tr>
                            <td>Email</td>
                            <td>
                                <input type="text" /></td>
                        </tr>
                        <tr>
                            <td>&nbsp</td>
                            <td>
                                <input class="bg-anthilla-green fg-anthilla-gray upcase" type="button" value="Create" /></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <input class="bg-anthilla-green fg-anthilla-gray upcase" type="button" value="Apply" />
    <br />
    <legend>VPN IPSEC</legend>
    <div class="tab-control" data-role="tab-control">
        <ul class="tabs">
            <li class="active"><a href="#_ipsecvpns_">Configured VPNs</a></li>
            <li><a href="#_newipsecvpn_">VPN Options</a></li>
        </ul>

        <div class="frames">
            <div class="frame" id="_ipsecvpns_">
                <table class="table hovered">
                    <thead>
                        <tr>
                            <th>Status</th>
                            <th>Name</th>
                            <th>Remote IP</th>
                            <th>Remote Network</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td>&nbsp</td>
                            <td>&nbsp</td>
                            <td>&nbsp</td>
                            <td>
                                <input class="bg-anthilla-green fg-anthilla-gray upcase" type="button" value="Add Connection" /></td>
                        </tr>
                    </tfoot>
                </table>
                <input class="bg-anthilla-green fg-anthilla-gray upcase" type="button" value="Apply" />
            </div>
            <div class="frame" id="_newipsecvpn_">
                <table class="table hovered">
                    <thead>
                        <tr>
                            <th>Set VPN Options</th>
                            <th>&nbsp</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td>"Abilita NAT Trasversale"</td>
                            <td>
                                <input type="radio" value="Yes" /><input type="radio" value="No" /></td>
                        </tr>
                        <tr>
                            <td>"Abilita Debug"</td>
                            <td>
                                <input type="radio" value="Yes" /><input type="radio" value="No" /></td>
                        </tr>
                        <tr>
                            <td>&nbsp</td>
                            <td>
                                <input class="bg-anthilla-green fg-anthilla-gray upcase" type="button" value="Save" /></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
    <br />

}

@section Scripts
{

}