@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>
@using System.Collections.Generic
@{Layout = "_layout-st.cshtml";}

@section PageBar
{
    <nav class="navigation-bar page bg-white fg-anthilla-blue" style="padding-top: 10px; border-bottom: 4px solid #548ED4;">
        <nav class="navigation-bar-content">
            <div class="element upcase bold no-overlay fg-black upcase" style="line-height: 0px; margin-left: 20px !important;">Backup </div>

            <a href="#anchorJob" class="element upcase no-overlay anchor" style="line-height: 0px;">
                <i class="icon-arrow-right on-left" style="line-height: 0px;"></i>Backup Job
            </a>
            <a href="#anchorBkag" class="element upcase no-overlay anchor" style="line-height: 0px;">
                <i class="icon-user-3 on-left" style="line-height: 0px;"></i>Backup Agent
            </a>
            <a href="#anchorReba" class="element upcase no-overlay anchor" style="line-height: 0px;">
                <i class="icon-enter on-left" style="line-height: 0px;"></i>Remote Backup
            </a>
            <a href="#anchorHyvi" class="element upcase no-overlay anchor" style="line-height: 0px;">
                <i class="icon-glasses on-left" style="line-height: 0px;"></i>HyperVisor Job
            </a>
        </nav>
    </nav>
}

@section Dashboard
{

}

@section MainContent
{

}

@section Scripts
{
    <script type="text/javascript">
        $('a.anchor').click(function () {
            $('html, body').animate({
                scrollTop: $($(this).attr('href')).offset().top
            }, 500);
            return false;
        });

        $(window).scroll(function () {
            if ($(window).scrollTop() > 150) {
                var i = $(window).scrollTop() - 145;
                $('.navigation-bar.page').css('top', i);
            }
            if ($(window).scrollTop() < 150) {
                $('.navigation-bar.page').css('top', 0);
            }
        });
    </script>
}