@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<List<AnthillaCore.Models.Anth_Dump>>
@using System.Collections.Generic
@{Layout = "_layout-st.cshtml";}

@section PageBar
{
    <nav class="navigation-bar page bg-white fg-anthilla-blue" style="padding-top: 10px; border-bottom: 4px solid #548ED4;">
        <nav class="navigation-bar-content">
            <div class="element upcase bold no-overlay fg-black upcase" style="line-height: 0px; margin-left: 20px !important;"> Setup </div>

            <a href="#anchorPwd" class="element upcase no-overlay anchor" style="line-height: 0px;">
                <i class="icon-wrench on-left" style="line-height: 0px;"></i>Passwords
            </a>
            <a href="#anchorRep" class="element upcase no-overlay anchor" style="line-height: 0px;">
                <i class="icon-clipboard-2 on-left" style="line-height: 0px;"></i>Report
            </a>
            <a href="#anchorSer" class="element upcase no-overlay anchor" style="line-height: 0px;">
                <i class="icon-globe on-left" style="line-height: 0px;"></i>Services
            </a>
            <a href="#anchorLng" class="element upcase no-overlay anchor" style="line-height: 0px;">
                <i class="icon-earth on-left" style="line-height: 0px;"></i>Language
            </a>
            <a href="#anchorAuCe" class="element upcase no-overlay anchor" style="line-height: 0px;">
                <i class="icon-star-4 on-left" style="line-height: 0px;"></i>Authority Certification
            </a>
            <a href="#anchorFup" class="element upcase no-overlay anchor" style="line-height: 0px;">
                <i class="icon-search on-left" style="line-height: 0px;"></i>Find Updates
            </a>
            <a href="#anchorSvcfg" class="element upcase no-overlay anchor" style="line-height: 0px;">
                <i class="icon-floppy on-left" style="line-height: 0px;"></i>Save Config
            </a>
        </nav>
    </nav>
}

@section MainContent
{
    <legend id="anchorPwd">Passwords</legend>
    <table class="table hovered">
        <thead>
            <tr>
                <th>Change User Password</th>
                <th>&nbsp</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>User Name</td>
                <td>
                    <input type="text" /></td>
            </tr>
            <tr>
                <td>New Password</td>
                <td>
                    <input type="password" /></td>
            </tr>
            <tr>
                <td>Repeat Password</td>
                <td>
                    <input type="password" /></td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td>&nbsp</td>
                <td>
                    <input class="bg-anthilla-green fg-anthilla-gray upcase" type="button" value="Save" /></td>
            </tr>
        </tfoot>
    </table>
    <br />
    <legend id="aaaaaaa">anchorRep</legend>
    <table class="table hovered">
        <thead>
            <tr>
                <th>Config</th>
                <th>&nbsp</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Enable</td>
                <td>
                    <select>
                        <option>Yes</option>
                        <option>No</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td>Email Owner</td>
                <td>
                    <input type="email" /></td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td>&nbsp</td>
                <td>
                    <input class="bg-anthilla-green fg-anthilla-gray upcase" type="button" value="Save" /></td>
            </tr>
        </tfoot>
    </table>
    <br />
    <legend id="anchorSer">Services</legend>
    <br />
    <legend id="anchorLng">Language</legend>
    <table class="table hovered">
        <thead>
            <tr>
                <th>Available Languages</th>
                <th>&nbsp</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <select>
                        <option selected disabled>Select Language</option>
                    </select>
                </td>
                <td>
                    <input class="bg-anthilla-green fg-anthilla-gray upcase" type="button" value="Save" /></td>
            </tr>
            <tr>
                <td>Upload a new file</td>
                <td>
                    <input type="file" value="Create" /></td>
            </tr>
        </tbody>
    </table>
    <br />
    <legend id="anchorAuCe">Authority Certification</legend>
    <table class="table hovered">
        <thead>
            <tr>
                <th>Certificate</th>
                <th>Expires</th>
                <th>Cryptography</th>
                <th>Email</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
        <tfoot>
            <tr>
                <td>&nbsp</td>
                <td>
                    <input class="bg-anthilla-green fg-anthilla-gray upcase" type="button" value="Renew Certificate" /></td>
            </tr>
        </tfoot>
    </table>
    <br />
    <legend id="aaaaaaa">Admin Email</legend>
    <table class="table hovered">
        <thead>
            <tr>
                <th>Set Admin Emails</th>
                <th>&nbsp</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Address</td>
                <td>
                    <input type="text" /></td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td>&nbsp</td>
                <td>
                    <input class="bg-anthilla-green fg-anthilla-gray upcase" type="button" value="Save" /></td>
            </tr>
        </tfoot>
    </table>
    <br />
    <legend id="anchorSvcfg">Save Config</legend>
    <div class="tab-control" data-role="tab-control">
        <ul class="tabs">
            <li class="active"><a href="#_save_">Save</a></li>
            <li><a href="#_load_">Load</a></li>
        </ul>

        <div class="frames">
            <div class="frame" id="_save_">
                <label>Email Address</label>
                <input type="text" />
                <input class="bg-anthilla-green fg-anthilla-gray upcase" type="button" value="Send Config" />
            </div>
            <div class="frame" id="_load_">
                <label>File Path</label>
                <input type="file" />
                <input class="bg-anthilla-green fg-anthilla-gray upcase" type="button" value="Load Config" />
            </div>
        </div>
    </div>
    <br />
    <legend id="anchorFup">Find Updates</legend>
    <br />
}

@section Scripts
{
    <script type="text/javascript">
        $('select').windowed();

        $('a.anchor').click(function () {
            $('html, body').animate({
                scrollTop: $($(this).attr('href')).offset().top
            }, 500);
            return false;
        });

        $(window).scroll(function () {
            if ($(window).scrollTop() > 150) {
                var i = $(window).scrollTop() - 145;
                $('.navigation-bar.page').css('top', i);
            }
            if ($(window).scrollTop() < 150) {
                $('.navigation-bar.page').css('top', 0);
            }
        });
    </script>
}